#include <stdio.h>
//printing pattern1
/*

****
*  *
*  *
****

*/
int main()
{
    for(int i=1;i<=4;i++)
    {
        for(int j=1;j<=4;j++){
            if(j==1 || j==4 ||i==1 ||i==4){
              printf("*");  
            }
            else{
                printf(" ");
            }
        }
        printf("\n");
    }
    

    return 0;
}
//printing pattern2
/*
    *
   **
  ***
 ****
*/

#include <stdio.h>
int main()
{
    for(int i=1;i<=4;i++)
    {
        for(int k=4;k>=i;k--)
            printf(" ");
        for(int j=1;j<=i;j++){
            printf("*");
            
        }
        printf("\n");
    }
    

    return 0;
}
//pattern3
/*
  *
 ***
*****

*/
#include <stdio.h>
int main()
{
    int n;
    scanf("%d",&n);
    for(int i=1;i<=n;i++)
    {
        
        for(int j=i;j<n;j++)
            printf(" ");
        for(int k=1;k<=(2*i-1);k++)
            printf("*");
        printf("\n");  
        
         
    }
    

    return 0;
}
