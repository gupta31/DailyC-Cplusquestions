#include <stdio.h>
//printing pattern1
/*

****
*  *
*  *
****

*/
int main()
{
    for(int i=1;i<=4;i++)
    {
        for(int j=1;j<=4;j++){
            if(j==1 || j==4 ||i==1 ||i==4){
              printf("*");  
            }
            else{
                printf(" ");
            }
        }
        printf("\n");
    }
    

    return 0;
}
//printing pattern2
/*
    *
   **
  ***
 ****
*/

#include <stdio.h>
int main()
{
    for(int i=1;i<=4;i++)
    {
        for(int k=4;k>=i;k--)
            printf(" ");
        for(int j=1;j<=i;j++){
            printf("*");
            
        }
        printf("\n");
    }
    

    return 0;
}
